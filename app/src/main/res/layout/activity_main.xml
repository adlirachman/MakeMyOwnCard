<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adlirachman.makemyowncard.MainActivity">


    <ImageView
        android:src="@drawable/backgroundb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:rotation="180"/>

    <TextView
        android:id="@+id/congrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="32dp"
        android:fontFamily="serif-monospace"
        android:textColor="#FF3D00"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/happygrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Graduation"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:textColor="#BF360C"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/congrats"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toga"
        android:scaleType="centerInside"
        android:layout_below="@+id/congrats"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â©AdliRachman"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#EEEEEE"/>

</RelativeLayout>
